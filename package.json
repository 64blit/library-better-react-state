{
  "name": "library-better-react-state",
  "version": "1.0.0",
  "description": "A feature-oriented React state management library built on Zustand with Clean Architecture principles, enhanced dev tools, and TypeScript support.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "docs:api": "typedoc --out docs/api src/index.ts",
    "prepare": "husky install",
    "build:examples": "npm run build && cd examples && npm install",
    "start:example:basic": "cd examples/basic-setup && npm start",
    "start:example:async": "cd examples/async-init-feature && npm start",
    "start:example:controllers": "cd examples/controllers-feature && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/64blit/library-better-react-state.git"
  },
  "keywords": [
    "react",
    "state-management",
    "zustand",
    "clean-architecture",
    "typescript"
  ],
  "author": "Your Name <youremail@example.com>",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/64blit/library-better-react-state/issues"
  },
  "homepage": "https://github.com/64blit/library-better-react-state#readme",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@types/deep-diff": "^1.0.5",
    "deep-diff": "^1.0.2",
    "react": ">=16.8.0",
    "typescript": "^5.8.3",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.4",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "rollup": "^4.40.2",
    "ts-jest": "^29.3.3",
    "typedoc": "^0.28.4"
  }
}
